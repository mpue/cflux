{
  "name": "cflux-demo",
  "version": "1.0.0",
  "description": "CFlux Time Tracking Demo Application - Standalone with integrated backend",
  "main": "main.js",
  "author": "CFlux Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "prebuild": "node scripts/prepare-backend.js",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.cflux.demo",
    "productName": "CFlux Demo",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../frontend/build",
        "to": "frontend/build",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/dist",
        "to": "backend/dist",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/node_modules/@prisma",
        "to": "backend/node_modules/@prisma",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/node_modules/.prisma",
        "to": "backend/node_modules/.prisma",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/prisma",
        "to": "backend/prisma",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/package.json",
        "to": "backend/package.json"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.business"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  }
}
